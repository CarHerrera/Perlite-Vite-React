{
    "name": "secure-77/perlite",
    "description": "A web based markdown viewer optimized for Obsidian Notes",
    "version": "1.5.9",
    "type": "project",
    "keywords": ["markdown viewer","obsidian notes"],
    "homepage": "https://github.com/secure-77/Perlite",
    "license": "MIT",
    "authors": [
        {
            "name": "secure-77",
            "email": "sec77@secure77.de",
            "homepage": "https://secure77.de"
        }
    ],
    "support": {
        "issues": "https://github.com/secure-77/Perlite/issues",
        "wiki": "https://github.com/secure-77/Perlite/wiki",
        "chat": "https://discord.gg/pkJ347ssWT"
    },
    "scripts": {
        "_comment": [
            "if you copy from this file, please note that the built-in `php -S` server is for development/testing only",
            "in a real-world scenario, use a proper web-server, such as Nginx, Caddy, Apache, etc."
        ],
        "build": [
            "npm run build"
        ],
        "start": [
            "npx concurrently \"composer start:server\" \"composer start:vite\" --names \"PHP,Vite\" --kill-others"
        ],
        "start:server": "@php -S localhost:8001 -t ../public index.php",
        "start:vite": "npm run dev",
        "preview": [
            "composer build",
            "APP_ENV=production composer start:server"
        ],
        "post-install-cmd": "npm ci"
    },
    "scripts-descriptions": {
        "start": "Run PHP server and Vite for development",
        "preview": "Build production assets and run the PHP server",
        "build": "Build deployment-ready assets for production"
    },
    "autoload": {
        "psr-4" : {
            "Perlite\\": ".src/"
        }
    },
    "config": {
       "preferred-install": "dist",
       "process-timeout": 0
    },
    "require": {
        "erusev/parsedown": "^1.7.4",
        "mindplay/php-vite": "^1.0"
    }

}
